<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">org.hsqldb.jdbcDriver</property>
        <property name="connection.url">jdbc:hsqldb:mem:carstore;sql.enforce_size=false</property>
        <property name="connection.username">sa</property>
        <property name="connection.password"></property>
        <property name="dialect">org.hibernate.dialect.HSQLDialect</property>

        <mapping resource="ru/job4j/carstore/models/descripted/Transmission.hbm.xml" />
        <mapping resource="ru/job4j/carstore/models/descripted/Engine.hbm.xml" />
        <mapping resource="ru/job4j/carstore/models/descripted/CarBody.hbm.xml" />
        <mapping resource="ru/job4j/carstore/models/descripted/Car.hbm.xml" />
    </session-factory>
</hibernate-configuration>