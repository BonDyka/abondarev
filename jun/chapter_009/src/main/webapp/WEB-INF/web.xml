<web-app>
    <servlet>
        <servlet-name>Users View Controller</servlet-name>
        <servlet-class>ru.job4j.sj.servlets.UsersViewController</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Users View Controller</servlet-name>
        <url-pattern>/view</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>JsonPlaceController</servlet-name>
        <servlet-class>ru.job4j.sj.servlets.JsonPlaceController</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>JsonPlaceController</servlet-name>
        <url-pattern>/places</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddUserController</servlet-name>
        <servlet-class>ru.job4j.sj.servlets.AddUserController</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddUserController</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditUserController</servlet-name>
        <servlet-class>ru.job4j.sj.servlets.EditUserController</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditUserController</servlet-name>
        <url-pattern>/edit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteUserController</servlet-name>
        <servlet-class>ru.job4j.sj.servlets.DeleteUserController</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteUserController</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SigninController</servlet-name>
        <servlet-class>ru.job4j.sj.servlets.SignInController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SigninController</servlet-name>
        <url-pattern>/signin</url-pattern>
    </servlet-mapping>
</web-app>